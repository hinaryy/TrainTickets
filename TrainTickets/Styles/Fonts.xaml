<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="Segoe MDL2 Assets">pack://application;,,,/Fonts/#Segoe MDL2 Assets</FontFamily>
    <Style TargetType="{x:Type Button}" x:Key="ButtonTextStyle">
        <Setter Property="FontFamily" Value="{StaticResource 'Segoe MDL2 Assets'}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <FontFamily x:Key="Poppins Bold">pack://application;,,,/Fonts/#Poppins Bold</FontFamily>
    <Style TargetType="{x:Type TextBlock}" x:Key="TextBlockTextStyle">
        <Setter Property="FontFamily" Value="{StaticResource 'Poppins Bold'}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

</ResourceDictionary>