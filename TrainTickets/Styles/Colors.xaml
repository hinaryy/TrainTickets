<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="DefaultContronPanelButtonColor">#FFF</Color> <!-- Стандартный цвет кнопки панели управления -->
    <SolidColorBrush x:Key="DefaultContronPanelButtonColorBrush" Color="{StaticResource DefaultContronPanelButtonColor}" />
    
    <Color x:Key="HoverControlPanelButtonColor">#E5E5E5</Color> <!-- Цвет кнопки панели управления при наведении -->
    <SolidColorBrush x:Key="HoverControlPanelButtonColorBrush" Color="{StaticResource HoverControlPanelButtonColor}" />

    <Color x:Key="PressedControlPanelButtonColor">#D7D7D7</Color> <!-- Цвет кнопки панели управления при нажатии -->
    <SolidColorBrush x:Key="PressedControlPanelButtonColorBrush" Color="{StaticResource PressedControlPanelButtonColor}" />

    <Color x:Key="HoverCloseButtonColor">#E81123</Color> <!-- Цвет кнопки закрытия при наведении -->
    <SolidColorBrush x:Key="HoverCloseButtonColorBrush" Color="{StaticResource HoverCloseButtonColor}" />

    <Color x:Key="PressedCloseButtonColor">#CC1123</Color> <!-- Цвет кнопки закрытия при нажатии -->
    <SolidColorBrush x:Key="PressedCloseButtonColorBrush" Color="{StaticResource PressedCloseButtonColor}" />

</ResourceDictionary>