<Page x:Class="TrainTickets.View.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainTickets.View.Pages"
      xmlns:ViewModel="clr-namespace:TrainTickets.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="880"
      Title="SignInPage">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="440"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Grid.Row="1" BorderThickness="2" BorderBrush="Black" CornerRadius="3">
            <StackPanel>
                <TextBlock 
                FontWeight="Bold" 
                FontSize="25" 
                HorizontalAlignment="Center" 
                Margin="0,30,0,30"
                FontFamily="{StaticResource Poppins Bold}" Text="Регистрация"/>

                <TextBox 
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Center" 
                    Height="50" 
                    Width="300" 
                    BorderBrush="Black" 
                    BorderThickness="2"
                    x:Name="RegistrationNameTextBox">

                </TextBox>

                <TextBox 
                    
                    HorizontalAlignment="Center" 
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                    Height="50" 
                    Width="300" 
                    BorderBrush="Black" 
                    BorderThickness="2"
                    Margin="0, 30, 0, 0"
                    x:Name="RegistrationEmailTextBox">

                </TextBox>

                <TextBox 
                    
                    HorizontalAlignment="Center" 
                    Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Height="50" 
                    Width="300" 
                    BorderBrush="Black" 
                    BorderThickness="2"
                    Margin="0, 30, 0, 30"
                    x:Name="RegistrationPasswordTextBox">

                </TextBox>


                <Button 
                    HorizontalAlignment="Center"
                    Height="50"
                    Width="150"
                    Content="Зарегистрироваться"
                    Background="#fff"
                    BorderBrush="Black"
                    BorderThickness="2"
                    FontWeight="DemiBold"
                    FontSize="13"
                    Command="{Binding SignUpCommand}"
                    />

                <TextBlock
                    FontWeight="Medium"
                    FontSize="13"
                    HorizontalAlignment="Center"
                    Margin="0, 10, 0, 0">
                    
                    <Hyperlink Foreground="Black"
                               FontWeight="SemiBold"
                               TextDecorations="None"
                               Command="{Binding NavigationToSignInCommand}">
                        Войти
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>
    </Grid>
</Page>
